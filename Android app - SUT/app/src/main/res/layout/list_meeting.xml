<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f8f8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="3dp"
        android:orientation="vertical"
        android:paddingBottom="7dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/txtMeetingInterfaceMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attention!!! Today I arrange a meeting for our building renovation... So
be remain in meeting. It is compulsory for all flat holders.. " />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtMeetingInterfaceTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="3dp"
                android:text="Time:: 8:00"
                android:textSize="12dp"
                android:textColor="#C0C0C0"/>

            <TextView
                android:id="@+id/txtMeetingInterfaceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="3dp"
                android:text="Date:- 28/11/2018"
                android:textSize="12dp"
                android:textColor="#C0C0C0"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>