<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtServiceInterfaceid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=" "
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/layoutServiceInterface"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/notification_round_corner"
        android:elevation="3dp"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true">

        <ImageView
            android:id="@+id/imgServiceInterface"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/carpanter1" />

        <TextView
            android:id="@+id/txtServiceInterface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="CARPENTER"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

